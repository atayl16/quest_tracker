<div class="min-h-screen bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900 flex items-center justify-center px-4">
  <div class="max-w-md w-full">
    <div class="bg-slate-800/50 backdrop-blur-sm rounded-2xl border border-slate-700/50 p-8">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-400 mb-2">
          Sign In
        </h1>
        <p class="text-slate-300">Welcome back, adventurer!</p>
      </div>

      <%= form_with url: signin_path, local: true, class: "space-y-6" do |form| %>
        <% if flash[:alert] %>
          <div class="bg-red-900/20 border border-red-500/50 rounded-lg p-4">
            <p class="text-red-300 text-sm"><%= flash[:alert] %></p>
          </div>
        <% end %>

        <div>
          <%= form.label :username, class: "block text-sm font-medium text-slate-300 mb-2" %>
          <%= form.text_field :username,
                class: "w-full px-4 py-3 bg-slate-700/50 border border-slate-600 rounded-lg text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200",
                placeholder: "Enter your username" %>
        </div>

        <div>
          <%= form.label :password, class: "block text-sm font-medium text-slate-300 mb-2" %>
          <%= form.password_field :password,
                class: "w-full px-4 py-3 bg-slate-700/50 border border-slate-600 rounded-lg text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200",
                placeholder: "Enter your password" %>
        </div>

        <div>
          <%= form.submit "Continue Your Quest",
                class: "w-full bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 text-white font-semibold py-3 px-6 rounded-lg transition-all duration-200 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2 focus:ring-offset-slate-800" %>
        </div>
      <% end %>

      <div class="mt-6 text-center">
        <p class="text-slate-400 text-sm">
          Don't have an account?
          <%= link_to "Sign up", signup_path, class: "text-purple-400 hover:text-purple-300 transition-colors duration-200" %>
        </p>
      </div>
    </div>
  </div>
</div> 
