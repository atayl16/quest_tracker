<!DOCTYPE html>
<html>
  <head>
    <title>QuestTracker</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%# Includes all stylesheet files in app/assets/stylesheets %>
    <%= stylesheet_link_tag :app %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="min-h-screen bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900">
      <div class="container mx-auto px-4 py-8">
        <% if notice %>
          <div class="mb-4 p-4 bg-green-500/20 border border-green-500/50 rounded-lg text-green-100 text-center sm:text-left">
            <%= notice %>
          </div>
        <% end %>

        <% if alert %>
          <div class="mb-4 p-4 bg-red-500/20 border border-red-500/50 rounded-lg text-red-100 text-center sm:text-left">
            <%= alert %>
          </div>
        <% end %>

        <%= yield %>
      </div>
    </div>
  </body>
</html>
