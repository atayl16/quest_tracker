<div class="min-h-screen bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900">
  <div class="container mx-auto px-4 py-8">
    <!-- Header Section -->
    <header class="text-center mb-12">
      <h1 class="text-5xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-400 mb-4">
        Quest Tracker
      </h1>
      <p class="text-slate-300 text-lg">Your personal journey to building better habits</p>
      <% if signed_in? %>
        <p class="text-purple-300 text-sm mt-2">Welcome back, <%= current_user.username %>!</p>
      <% end %>
    </header>

    <!-- Habits Section -->
    <main class="max-w-4xl mx-auto">
      <div class="bg-slate-800/50 backdrop-blur-sm rounded-2xl border border-slate-700/50 p-8">
        <h2 class="text-2xl font-semibold text-white mb-6 flex items-center">
          <span class="text-purple-400 mr-3" aria-hidden="true">⚔️</span>
          My Active Quests
        </h2>
        
        <% if @habits.any? %>
          <div class="space-y-4">
            <% @habits.each do |habit| %>
              <%= turbo_frame_tag "habit_#{habit.id}" do %>
                <div class="bg-slate-700/30 rounded-xl p-6 border border-slate-600/30 hover:border-purple-500/50 transition-all duration-300">
                  <div class="flex items-center justify-between">
                    <div class="flex items-center">
                      <div class="w-3 h-3 bg-purple-500 rounded-full mr-4"></div>
                      <h3 class="text-lg font-medium text-white"><%= habit.title %></h3>
                    </div>
                    
                    <div class="flex items-center space-x-4">
                      <% if habit.check_ins.for_date(Date.current).exists? %>
                        <!-- Already completed today -->
                        <div class="flex items-center space-x-2">
                          <span class="text-sm text-green-400 font-medium">✅ Completed Today!</span>
                          <div class="w-2 h-2 bg-green-500 rounded-full"></div>
                        </div>
                      <% else %>
                        <!-- Not completed today - show check-in button -->
                        <div class="flex items-center space-x-3">
                          <span class="text-sm text-slate-400">Ready to complete</span>
                          <%= form_with url: habit_check_ins_path(habit), method: :post, local: false, class: "inline" do |form| %>
                            <%= form.submit "Complete Quest", 
                                class: "bg-gradient-to-r from-green-600 to-emerald-600 hover:from-green-700 hover:to-emerald-700 text-white font-semibold py-2 px-4 rounded-lg transition-all duration-200 transform hover:scale-105 text-sm",
                                data: { 
                                  turbo_method: :post,
                                  turbo_frame: "habit_#{habit.id}"
                                } %>
                          <% end %>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-12">
            <div class="text-6xl mb-4" role="img" aria-label="Castle">🏰</div>
            <h3 class="text-xl font-medium text-slate-300 mb-2">No active quests yet</h3>
            <p class="text-slate-400 mb-6">Start your journey by creating your first habit quest!</p>
            <button class="bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 text-white font-semibold py-3 px-6 rounded-lg transition-all duration-200 transform hover:scale-105">
              Begin Your Quest
            </button>
          </div>
        <% end %>
      </div>
    </main>

    <!-- Footer -->
    <footer class="text-center mt-12">
      <p class="text-slate-500 text-sm">Level up your life, one habit at a time</p>
    </footer>
  </div>
</div> 
