<div class="min-h-screen bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900">
  <div class="container mx-auto px-4 py-8">
    <!-- Header Section -->
    <header class="text-center mb-12">
      <h1 class="text-5xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-400 mb-4">
        Quest Tracker
      </h1>
      <p class="text-slate-300 text-lg">Your personal journey to building better habits</p>
    </header>

    <!-- Habits Section -->
    <main class="max-w-4xl mx-auto">
      <div class="bg-slate-800/50 backdrop-blur-sm rounded-2xl border border-slate-700/50 p-8">
        <h2 class="text-2xl font-semibold text-white mb-6 flex items-center">
          <span class="text-purple-400 mr-3" aria-hidden="true">⚔️</span>
          My Active Quests
        </h2>
        
        <% if @habits.any? %>
          <div class="space-y-4">
            <% @habits.each do |habit| %>
              <div class="bg-slate-700/30 rounded-xl p-6 border border-slate-600/30 hover:border-purple-500/50 transition-all duration-300">
                <div class="flex items-center justify-between">
                  <div class="flex items-center">
                    <div class="w-3 h-3 bg-purple-500 rounded-full mr-4"></div>
                    <h3 class="text-lg font-medium text-white"><%= habit.title %></h3>
                  </div>
                  <div class="flex items-center space-x-2">
                    <span class="text-sm text-slate-400">In Progress</span>
                    <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-12">
            <div class="text-6xl mb-4" role="img" aria-label="Castle">🏰</div>
            <h3 class="text-xl font-medium text-slate-300 mb-2">No active quests yet</h3>
            <p class="text-slate-400 mb-6">Start your journey by creating your first habit quest!</p>
            <button class="bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 text-white font-semibold py-3 px-6 rounded-lg transition-all duration-200 transform hover:scale-105">
              Begin Your Quest
            </button>
          </div>
        <% end %>
      </div>
    </main>

    <!-- Footer -->
    <footer class="text-center mt-12">
      <p class="text-slate-500 text-sm">Level up your life, one habit at a time</p>
    </footer>
  </div>
</div> 
